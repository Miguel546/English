<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/listIrregularVerbs"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"

    android:layout_marginBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/baseForm"
        android:layout_weight="1"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:text="01/01/2017"/>

    <TextView
        android:id="@+id/pastTense"
        android:layout_weight="1"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/baseForm"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:text="buy"/>

    <TextView
        android:id="@+id/pastParticiple"
        android:layout_toRightOf="@+id/pastTense"
        android:layout_weight="1"
        android:layout_centerInParent="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="+7Kg"/>

</LinearLayout>
